#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/zx@8.5.3/node_modules/zx/build/node_modules:/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/zx@8.5.3/node_modules/zx/node_modules:/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/zx@8.5.3/node_modules:/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/zx@8.5.3/node_modules/zx/build/node_modules:/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/zx@8.5.3/node_modules/zx/node_modules:/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/zx@8.5.3/node_modules:/Users/takashi/ghq/github.com/tughril/dotfiles/zx-scripts/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../.pnpm/zx@8.5.3/node_modules/zx/build/cli.js" "$@"
else
  exec node  "$basedir/../.pnpm/zx@8.5.3/node_modules/zx/build/cli.js" "$@"
fi
